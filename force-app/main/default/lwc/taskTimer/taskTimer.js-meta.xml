<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>65.0</apiVersion>
    <description>Task Timer component with start/stop/reset and localStorage persistence</description>
    <isExposed>true</isExposed>
    <masterLabel>Task Timer</masterLabel>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__RecordPage,lightning__HomePage">
            <property name="taskId" type="String" label="Task ID" description="ID of the task to track time for" required="true" />
            <property name="taskName" type="String" label="Task Name" description="Name of the task" />
            <property name="compact" type="Boolean" label="Compact Mode" default="false" description="Show compact view for cards" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
