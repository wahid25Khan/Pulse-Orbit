{
	"extends": ["@salesforce/eslint-config-lwc/recommended"],
	"overrides": [
		{
			"files": ["*.js"],
			"rules": {
				"@lwc/lwc/no-async-operation": "warn",
				"@lwc/lwc/no-inner-html": "error"
			}
		},
		{
			"files": ["*.html"],
			"parser": "@lwc/eslint-plugin-lwc/lib/html-parser",
			"rules": {
				"lwc/no-unknown-wire-adapters": "off"
			}
		},
		{
			"files": ["**/__tests__/**"],
			"env": {
				"jest": true
			},
			"rules": {
				"@lwc/lwc/no-unexpected-wire-adapter-usages": "off"
			}
		}
	],
	"env": {
		"browser": true,
		"es2021": true
	}
}
